{
  "name": "wshops-fe-utils",
  "author": "Tony An <anxuanzi@w-shops.com>",
  "homepage": "https://www.w-shops.com/",
  "description": "Wshops Shopfront development toolkit",
  "private": true,
  "version": "0.0.0",
  "main": "./dist/wshop.cjs",
  "module": "./dist/wshop.mjs",
  "packageManager": "yarn@1.22.19",
  "exports": {
    ".": {
      "require": "./dist/wshop.cjs",
      "import": "./dist/wshop.mjs"
    }
  },
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "yarn run format:scripts && yarn run format:styles",
    "prepare": "husky install && husky add .husky/pre-commit 'npx lint-staged' && git add .husky/pre-commit"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "dts-bundle-generator": "^6.12.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-recommended": "^8.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vite-plugin-banner": "^0.3.0",
    "vite-plugin-dts": "^1.2.1"
  }
}
